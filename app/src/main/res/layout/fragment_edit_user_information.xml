<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/userInformationImageView"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/user_photo"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/userInformationImageUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:autofillHints="postalAddress"
        android:hint="@string/enter_url_image"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/userInformationPhoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:autofillHints="phone"
        android:hint="@string/enter_phone_number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/userInformationFirstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:autofillHints="username"
        android:hint="@string/enter_first_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/userInformationLastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:autofillHints="username"
        android:hint="@string/enter_last_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save" />

</LinearLayout>