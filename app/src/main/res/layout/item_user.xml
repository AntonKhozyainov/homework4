<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/userItemImageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/user_photo"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/userItemPhoneNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/userItemFirstNameTextView"
            app:layout_constraintStart_toEndOf="@+id/userItemImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/us_phones" />

        <TextView
            android:id="@+id/userItemFirstNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/userItemPhoneNumberTextView"
            app:layout_constraintTop_toBottomOf="@+id/userItemPhoneNumberTextView"
            tools:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/userItemLastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:alpha="0.8"
            app:layout_constraintStart_toEndOf="@+id/userItemFirstNameTextView"
            app:layout_constraintTop_toTopOf="@+id/userItemFirstNameTextView"
            tools:text="@tools:sample/last_names" />

        <TextView
            android:id="@+id/userItemIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="id: 1231234124"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>